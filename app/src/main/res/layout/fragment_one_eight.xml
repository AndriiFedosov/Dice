<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ua.andry.dice.fragments.OneEight">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/diced8"
            android:layout_width="295dp"
            android:layout_height="364dp"
            android:padding="0dp"
            app:srcCompat="@drawable/d8"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textOneEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Get Luck!"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.DropDownHint"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/diced8"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
